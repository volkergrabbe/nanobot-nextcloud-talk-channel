{
  "channels": {
    "nextcloud_talk": {
      "enabled": true,
      "baseUrl": "https://cloud.example.com",
      "botSecret": "your-shared-secret-min-40-chars",
      "webhookPath": "/webhook/nextcloud_talk",
      "allowFrom": [
        "volker",
        "alice",
        "bob",
        "testuser1",
        "testuser2"
      ],
      "allowRooms": [
        "testtoken123",
        "roomtoken456",
        "productionroom789"
      ],
      "roomPolicy": "mention"
    }
  },
  "agents": {
    "defaults": {
      "workspace": "~/.nanobot/workspace",
      "model": "anthropic/claude-opus-4-5",
      "max_tokens": 8192,
      "temperature": 0.1
    }
  },
  "providers": {
    "anthropic": {
      "apiKey": "sk-ant-api03-..."
    }
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  }
}

/*
 * NOTES:
 *
 * 1. Provide baseUrl without trailing slash (e.g., "https://cloud.example.com")
 * 2. botSecret must be at least 40 characters long
 * 3. roomPolicy can be "open" or "mention":
 *    - "open": Bot responds to all messages
 *    - "mention": Bot responds only to @Bot messages
 * 4. allowFrom: Nextcloud User IDs (names or IDs)
 * 5. allowRooms: Nextcloud conversation tokens
 *
 * 6. Expected structure:
 *    channels: { nextcloud_talk: { enabled, baseUrl, botSecret, webhookPath, allowFrom, allowRooms, roomPolicy } }
 */